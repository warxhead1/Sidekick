@using Microsoft.AspNetCore.Components

<TextBase Class="font-caps leading-none py-0.5">
    @Label
    @if (OnlyShowLabel == false)
    {
        <span class="text-[#7f7f7f]">: </span>
        @if (Value != null)
        {
            <span>@((MarkupString)Value)</span>
        }
    }
</TextBase>

@code {

    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public string? Value { get; set; }

    [Parameter]
    public bool OnlyShowLabel { get; set; }

}
